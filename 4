VermelhoAll='\e[01;37;41m'
NADA='\033[0m'
CINZA='\e[02;37m'
DESTACAR='\e[01;37m'
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
SCOLOR='\033[0m'
SEMCOR='\033[8m'
AZUL='\033[36m'
PURPULA='\033[35m'
AMARELO='\033[33m'
BrancoAll='\e\033[03;37;47m'
LETRAPRETA='\e\033[02;30;47m'
MenuF(){
clear
echo -e '\n'
echo -e "         ${PURPULA}================================="
echo -e "                ${GREEN}MB Free @EhisOpeNer    "
echo "        ==================================="
echo -e "               ${AZUL}Qual brinquedo para hoje"
echo
echo "        ===================================" 
echo -e "            ${AZUL}[ 1 ] - ${YELLOW}Ganhar MB Vivo"
echo -e "            ${AZUL}[ 2 ] - ${YELLOW}Ganhar MB Oi"
echo -e "            ${AZUL}[ 3 ] - ${AMARELO}Instalar pacotes básicos"
echo -e "            ${AZUL}[ 0 ] - ${RED}Sair, tenho medo"${NADA}
echo "        ==================================="
echo

echo 
    read -n1 -p "Raj, escolhe uma carta " App
    case $App in  
    1)curl -sO https://raw.githubusercontent.com/leitura/mb/main/mb && chmod 777 mb && ./mb ;;
    2)curl -sO https://raw.githubusercontent.com/leitura/ospacotesmb/main/oi && chmod 777 oi && ./oi ;;
    3)clear; echo "instalando pacotes básicos"; sleep 2;
curl -s https://raw.githubusercontent.com/leitura/ospacotesmb/main/packages | xargs pkg install -y; MenuF;;
    0) clear ; exit;;
    *) echo ; MenuF;;
    esac
}
MenuF